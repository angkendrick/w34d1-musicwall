  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/javascript/application.js"></script>

  <title>Music Wall</title>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <a href="/" class="btn btn-primary btn-lg active" role="button">Main</a>
    <% if session[:name] %>
      <a href="/create" class="btn btn-primary btn-lg active" role="button">Create</a>
      <a href="/view" class="btn btn-primary btn-lg active" role="button">View</a>
      <a href="/logout" class="btn btn-default btn-lg pull-right" role="button"><%= session[:name]%></a>
    <% else %>
      <a href="/login" class="btn btn-default btn-lg pull-right" role="button">Sign-In</a>
    <% end %>
  </nav>

  <%= yield %>
