<h1><i class="fa fa-sliders"></i>Music Wall</h1>

<div class="container">
  <div class="jumbotron">
  <form method= "post" action="/authenticate">
    <div class="form-group">
    <h3>Sign-In</h3>
      <label>Username</label>
      <input class="form-control" type="text" name="user" placeholder="Username" value="<%= @user && @user.user %>"><br />
    </div>
    <div class="form-group">
      <label>Password</label>
      <input class="form-control" type="password" name="password" placeholder="Password"><br />
    </div>
    <% if @error %>Invalid username or password!<% end %>
    <div class="form-group">
      <input class="btn btn-default" type="submit" value="Login!">
    </div>
  </form>
</div>
</div>